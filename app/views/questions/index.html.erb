<p id="notice"><%= notice %></p>

<h1>Writers Block</h1>

<%= link_to 'Ask a Question', new_question_path, class: 'btn btn-primary mt-3' %>
<%= link_to "Log out", logout_path, method: :delete %>

<hr>

<% @questions.each do |question| %> <br>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to question.title, question_path(question) %></h5>
      <p class="card-text"><%= truncate(question.body, length: 60) %></p>
      <%= link_to 'Edit', edit_question_path(question), class: 'card-link' %>
      <small>Created by: <%= question.user.username if question.user %>,
      <%= time_ago_in_words(question.created_at) %> ago,
      last updated: <%= time_ago_in_words(question.updated_at) %> ago</small>
    </div>
  </div>
<% end %>
